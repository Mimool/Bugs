<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mimool.bugs.activity.HouseActivity">

    <TextView
        android:id="@+id/imgbtn_toilet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imgbtn_kitchen"
        android:layout_column="1"
        android:layout_marginBottom="145dp"
        android:layout_row="0"
        android:text="화장실"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/imgbtn_pipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imgbtn_bedroom"
        android:layout_alignTop="@+id/imgbtn_toilet"
        android:layout_column="8"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="61dp"
        android:layout_row="4"
        android:text="하수구"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/imgbtn_bedroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imgbtn_kitchen"
        android:layout_column="1"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="75dp"
        android:layout_row="5"
        android:text="침실"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/imgbtn_kitchen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appbar"
        android:layout_column="0"
        android:layout_marginStart="52dp"
        android:layout_marginTop="36dp"
        android:layout_row="2"
        android:text="부엌"
        android:textAppearance="?android:attr/textAppearanceLarge" />
</RelativeLayout>

